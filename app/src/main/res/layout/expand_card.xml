<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="500dp"
android:weightSum="1"
android:background="@color/colorPrimaryDark">
<TextView
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Title"
    android:textColor="@color/common_google_signin_btn_text_dark"
    android:id="@+id/item_search_txtTitle"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_weight="0.46"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:weightSum="1"
    android:background="@color/colorPrimary"
    android:id="@+id/linearLayout"
    android:layout_below="@+id/item_search_txtTitle"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Address"
        android:id="@+id/item_search_txtAddress"
        android:layout_below="@+id/item_search_txtDistance"
        android:layout_toLeftOf="@+id/item_search_txtDistance"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:layout_toStartOf="@+id/item_search_txtDistance"
        android:layout_weight="0.85" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Distance"
        android:id="@+id/item_search_txtDistance"
        android:layout_alignRight="@+id/item_search_txtTitle"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:layout_alignEnd="@+id/item_search_txtTitle"
        android:layout_below="@+id/locationImage" />

</LinearLayout>

<ImageView
    android:contentDescription="@+id/item_search_txtTitle"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:src="@drawable/toronto"
    android:id="@+id/expand_image_location"
    android:layout_below="@+id/linearLayout"
    android:scaleType="centerCrop"
    android:layout_alignBottom="@+id/rating"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="            "
        android:id="@+id/rating"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_alignTop="@+id/price"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="            "
        android:id="@+id/price"
        android:layout_marginBottom="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="74dp"
        android:layout_marginEnd="74dp" />

</RelativeLayout>