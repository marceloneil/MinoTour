<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="500dp"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:weightSum="1"
        android:background="@color/text"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Title"
            android:id="@+id/item_search_txtTitle"
            android:layout_alignBaseline="@+id/item_search_txtDistance"
            android:layout_alignBottom="@+id/item_search_txtDistance"
            android:textColor="@color/common_google_signin_btn_text_dark"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.46" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Address"
            android:id="@+id/item_search_txtAddress"
            android:layout_below="@+id/item_search_txtDistance"
            android:layout_toLeftOf="@+id/item_search_txtDistance"
            android:textColor="@color/common_google_signin_btn_text_dark"
            android:layout_toStartOf="@+id/item_search_txtDistance"
            android:layout_weight="0.52" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Distance"
            android:id="@+id/item_search_txtDistance"
            android:layout_alignRight="@+id/item_search_txtTitle"
            android:layout_alignEnd="@+id/item_search_txtTitle"
            android:textColor="@color/common_google_signin_btn_text_dark"
            android:layout_below="@+id/locationImage" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:src="@drawable/toronto"
        android:id="@+id/locationImage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/linearLayout"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="description"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:id="@+id/item_search_txtDesc"
        android:layout_below="@+id/locationImage"
        android:background="@color/colorPrimary"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
