<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_height="300dp"
    android:weightSum="1"
    android:background="@color/colorWhite"
    android:gravity="center">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="4dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Title"
            android:textColor="@color/common_google_signin_btn_text_dark"
            android:id="@+id/item_search_txtTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.46"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/item_search_txtTitle"/>

        <ImageView
            android:contentDescription="@+id/item_search_txtTitle"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/toronto"
            android:id="@+id/locationImage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:weightSum="1"
            android:background="@color/colorPrimary"
            android:id="@+id/linearLayout"
            android:layout_below="@+id/locationImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Address"
                android:id="@+id/item_search_txtAddress"
                android:layout_below="@+id/item_search_txtDistance"
                android:layout_toLeftOf="@+id/item_search_txtDistance"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_toStartOf="@+id/item_search_txtDistance"
                android:layout_weight="0.85" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Distance"
                android:id="@+id/item_search_txtDistance"
                android:layout_alignRight="@+id/item_search_txtTitle"
                android:textColor="@color/common_google_signin_btn_text_dark"
                android:layout_alignEnd="@+id/item_search_txtTitle"
                android:layout_below="@+id/locationImage" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>

